# -----------------------------------------------------------------------------
# Vim layout
# -----------------------------------------------------------------------------

# Adds functionality to the statusline.
[submodule "bundle/vim-airline"]
	path = bundle/vim-airline
	url = https://github.com/bling/vim-airline.git

# Plugin to keep track of buffers.
[submodule "bundle/vim-buffergator"]
	path = bundle/vim-buffergator
	url = https://github.com/jeetsukumaran/vim-buffergator.git

# Plugin to show file tree.
[submodule "bundle/nerdtree"]
	path = bundle/nerdtree
	url = https://github.com/scrooloose/nerdtree.git

# -----------------------------------------------------------------------------
# IDE
# -----------------------------------------------------------------------------

# Shows tags of file
[submodule "bundle/tagbar"]
	path = bundle/tagbar
	url = https://github.com/majutsushi/tagbar.git

# Helper plugin to view Git repo informattion (needed by airline).
[submodule "bundle/vim-fugitive"]
	path = bundle/vim-fugitive
	url = https://github.com/tpope/vim-fugitive.git

# Fuzzy file finder.
[submodule "bundle/ctrlp.vim"]
	path = bundle/ctrlp.vim
	url = https://github.com/kien/ctrlp.vim.git

# Comment blocks and lines.
[submodule "bundle/tcomment_vim"]
	path = bundle/tcomment_vim
	url = https://github.com/tomtom/tcomment_vim.git

# Auto complete plugin for HTML and CSS code.
[submodule "bundle/emmet-vim"]
	path = bundle/emmet-vim
	url = https://github.com/mattn/emmet-vim.git

# General autocomplete plugin.
[submodule "bundle/supertab"]
	path = bundle/supertab
	url = https://github.com/ervandew/supertab.git

# -----------------------------------------------------------------------------
# Syntax
# -----------------------------------------------------------------------------

# Color scheme.
[submodule "bundle/vim-colors-solarized"]
	path = bundle/vim-colors-solarized
	url = https://github.com/altercation/vim-colors-solarized.git

# Parenthesis colorization.
[submodule "bundle/rainbow_parentheses.vim"]
	path = bundle/rainbow_parentheses.vim
	url = https://github.com/kien/rainbow_parentheses.vim.git

# Align tests based on characters.
[submodule "bundle/tabular"]
	path = bundle/tabular
	url = https://github.com/godlygeek/tabular.git

# Marks changes in files that have not being saved.
[submodule "bundle/auto-pairs"]
	path = bundle/auto-pairs
	url = https://github.com/jiangmiao/auto-pairs.git

# Gives syntax higlighting for Sass and Haml files.
[submodule "bundle/vim-haml"]
	path = bundle/vim-haml
	url = https://github.com/tpope/vim-haml.git
[submodule "bundle/vim-indent-guides"]
	path = bundle/vim-indent-guides
	url = https://github.com/nathanaelkane/vim-indent-guides.git
[submodule "bundle/vim-ruby-interpolation"]
	path = bundle/vim-ruby-interpolation
	url = https://github.com/p0deje/vim-ruby-interpolation.git
